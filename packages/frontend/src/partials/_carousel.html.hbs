{{#*inline "carousel-item"}}
<div class="carousel-item {{#if active}}active{{/if}}">
  <div class="container-fluid">
    <img src="{{img}}" class="d-block" alt="carousel-image">
    <div class="carousel-caption d-none d-md-block">
      <h5 class="caption-title animated fadeInDown">{{title}}</h5>
      <p class="caption-body animated fadeInUp">{{{text}}}</p>
      {{!-- <a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a> --}}
    </div>
  </div>
</div>
{{/inline}}

<!-- START OF CAROUSEL CONFIGURATION -->
<div class="row carousel slide bg-primary text-light" id="mainCarousel" data-ride="carousel" data-pause="hover"
  data-keyboard="true">
  <!-- Indicators - Li'l bois on the bottom that tell you which carousel item you're on -->
  <ol class="carousel-indicators">
    {{#times carousel-data.length}}
    <li data-target="#mainCarousel" data-slide-to="{{this}}" {{#if_eq this 0}}class="active"{{/if_eq}}></li>
    {{/times}}
  </ol>
  <!-- All the good stuff inside the carousel -->
  <div class="carousel-inner">

    {{#each carousel-data}}
      {{#if_eq @index 0}}
        {{>carousel-item active="true" title=this.title img=this.img text=this.text}}
      {{else}}
        {{>carousel-item active=0 title=this.title img=this.img text=this.text}}
      {{/if_eq}}
    {{/each}}

  </div>
  <!-- End of inner carousel, start of controls -->
  <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
