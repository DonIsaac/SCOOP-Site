{{#*inline "carousel-item"}}
<div class="carousel-item {{#if active}}active{{/if}}">
  <div class="container-fluid">
    <img src="{{img}}" class="d-block" alt="carousel-image">
    <div class="carousel-caption d-none d-md-block">
      <h5 class="caption-title animated fadeInDown">{{title}}</h5>
      <p class="caption-body animated fadeInUp">{{{@partial-block}}}</p>
      {{!-- <a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a> --}}
    </div>
  </div>
</div>
{{/inline}}

<!-- START OF CAROUSEL CONFIGURATION -->
<div class="row carousel slide bg-primary text-light" id="mainCarousel" data-ride="carousel" data-pause="hover"
  data-keyboard="true">
  <!-- Indicators - Li'l bois on the bottom that tell you which carousel item you're on -->
  <ol class="carousel-indicators">
    <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#mainCarousel" data-slide-to="1" class></li>
    <li data-target="#mainCarousel" data-slide-to="2" class></li>
  </ol>
  <!-- All the good stuff inside the carousel -->
  <div class="carousel-inner">


    {{#>carousel-item active="true" title="SCOOP Image 1" img="assets/img/carousel-1.jpg"}}
      Morbi fringilla ipsum mi, a vulputate mauris auctor vel
    {{/carousel-item}}

    {{#>carousel-item active=0 title="SCOOP Image 2" img="assets/img/carousel-2.jpg"}}
      In tincidunt, ipsum in elementum fermentum, arcu leo pharetra
    {{/carousel-item}}

    {{#>carousel-item active=0 title="SCOOP Image 3" img="assets/img/carousel-3.jpg"}}
      Morbi in quam nec risus fermentum molestie a vel lacus
    {{/carousel-item}}
  </div>
  <!-- End of inner carousel, start of controls -->
  <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
