<div class="cal-box container-fluid wow fadeInRight slow">
  <div class="row">
    {{! calendar graphic }}
    <div class="col-3 date-container">
      <div class="cal-date">
        <i class="icon far fa-calendar"></i>
      </div>
      <div class="cal-date">
        <span class="cal-day">
          {{day}}
        </span>
      </div>
    </div>
    {{! event details }}
    <div class="col-9">
      <div class="container cal-details">
        <div class="row">
          <i>
            {{date}}
          </i>
        </div>
        <div class="row d-flex h-100 text-right">
          <h3 class="display-5">
            {{name}}
          </h3>
        </div>
      </div>
    </div>
  </div>
</div>
