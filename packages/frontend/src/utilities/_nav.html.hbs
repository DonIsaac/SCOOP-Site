{{#*inline "link"}}
  <a class="nav-link {{#if active}}active{{/if}}" href="{{url}}">{{@partial-block}}</a>
{{/inline}}

  <ul class="nav justify-content-end pb-3">
    {{#each pages as |page|}}
    <li class="nav-item">
      {{#if_eq page.text ../active }}
        {{#>link active=page.text url=page.url}}
          {{page.text}}
        {{/link}}
      {{else}}
        {{#>link url=page.url}}
          {{page.text}}
        {{/link}}
      {{/if_eq}}
    </li>
    {{/each}}
  </ul>
