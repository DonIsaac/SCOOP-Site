{{#extend "application"}}
{{!-- This content will be put in the head tag. Use it to load stylesheets. --}}
{{#content "head"}}
<link rel="stylesheet" href="assets/css/index.css">
<script src="assets/lib/ical/ical.min.js"></script>
{{/content}}
{{!-- This is where stuff the user sees should go. --}}
{{#content "body"}}

{{>carousel}}
{{! About Us Section }}
<section class="bg-primary">
  <div class="container">
    <div class="row justify-content-center text-light">
      <h2 class="section-title">About Us</h2>
      <p>
        Praesent quis porttitor risus, a interdum ex. Vestibulum ante ipsum primis in faucibus orci luctus
        et ultrices posuere cubilia Curae; In tristique dictum nibh, suscipit maximus elit. Fusce porta
        condimentum leo vel viverra. Suspendisse elementum consequat tortor, sed blandit mauris vulputate
        aliquam. Aenean vel faucibus dui, in interdum dolor. Cras consequat suscipit velit, sed porta ante
        eleifend eget. Duis egestas nec nisl sit amet varius. Praesent quis purus eu libero pulvinar congue
        sed non eros
      </p>
      <button type="button" class="btn btn-outline-light"><span class="fas fa-user-plus icon-left"></span> Join Us</button>
    </div>
  </div>
</section>
<section class="bg-primary">
  <div class="container text-light">
    <div class="row text-center justify-content-center">
      <h2 class="section-title">What We Do</h2>
    </div>
    <div class="row justify-content-center">
      {{#each activities}}
      <div class="col-lg-4">
        {{>box title=title text=text}}
      </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="bg-primary">
  <div class="container">
    <div class="row justify-content-center text-light text-center">
      <h2 class="section-title">Membership Benefits</h2>
    </div>
    <div class="row row-eq-height mt-5">
      {{#each membership}}
      <div class="col-sm-12 col-md-6 col-lg-4">
        {{>box icon=icon title=title text=text}}
      </div>
      {{/each}}
    </div>
    <div class="row justify-content-center">
      <p class="text-light">
        Check out all of our awesome benefits!
      </p>
    </div>
    <div class="row justify-content-center text-light">
      <a href="#" class="btn btn-outline-light mr-3"><span class="fas fa-user-plus icon-left"></span> Become a Member</a>
      <a href="./members.html" class="btn btn-outline-light"><span class="fa fa-users icon-left"></span> Browse Current Members</a>
    </div>
  </div>
</section>
<section class="bg-primary">
  <div class="container">
    <div class="row justify-content-center text-light text-center">
      <h2 class="section-title">Upcoming Events</h2>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        {{>cal-box}}
      </div>
      <div class="col-lg-6">
        {{>cal-box}}
      </div>
    </div>
  </div>
</section>
<section class="bg-primary">
  <div class="container">
    <div class="row justify-content-center text-center text-light">
      <h2 class="section-title">Contact Us</h2>
    </div>
    <div class="row justify-content-center text-light">
      <p>
        Questions? Comments? Concerns? Send us an email!
      </p>
    </div>
    <div class="row justify-content-center">
      <button class="btn btn-outline-light" onclick="void(window.open('mailto:{{scoop-email}}'))" style="margin: 2em 0;"><span class="far fa-envelope icon-left"></span>  Contact Us</button>
    </div>
  </div>
</section>
{{!-- TODO - CONTACT SECTION --}}
{{/content}}
{{!-- This content will be put at the bottom of the page. Use it to load scripts. --}}
{{#content "foot"}}
<script src="assets/js/index.js" type="application/javascript"></script>
<script>
  new WOW().init();
</script>
{{/content}}
{{/extend}}
